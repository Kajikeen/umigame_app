<section class="py-5 jumbotron">
  <div>
    <% @user.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
    <div class="container text-center">
      <%= form_tag("/users/create") do %>
        <p class="pt-2">ユーザー名</p>
        <input name="name" class="mb-3 value="<%= @user.name %>">
        <p class="pt-2">メールアドレス</p>
        <input name="email" class="mb-3 value="<%= @user.email %>">
        <p class="pt-2">パスワード</p>
        <input name="password" type="password" value="<%= @user.password %>">
        <p><input type="submit" value="新規登録" class="btn btn-primary mt-4"></p>
      <% end %>
    </div>
  </div>
</section>
